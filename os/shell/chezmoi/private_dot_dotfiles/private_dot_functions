# My Shell Functions

# Create a new directory and enter it
function mk() {
  mkdir -p "$@" && cd "$@" || exit
}


#==============================================================================
#                       git
#==============================================================================
# Git - stage all current changes, commit them, and push them to current remote branch.
# Argument: "commit message". If not present, defaults to "default message".
function gitsend() {
  git add -A
  git commit -m "${1:-"default message"}"
  git push
}

# Git - from any branch, checkout main, pull any changes, then switch back to the original branch.
function gitum() {
  local current_branch=$(git symbolic-ref --short HEAD)
  branch=${1:-$current_branch}
  git checkout main
  git pull
  git checkout "$branch"
}

# Function to return a number n, and then n+1 on subsequent calls.
# In order to ensure the global value, output the value to a file. Otherwise, value is reset from new terminal sessions via gitconfig e.g.
SEQN_FILE="$HOME/dotfiles/.seqn_counter"
seqn() {
    if [ ! -f "$SEQN_FILE" ]; then
        echo 1 > "$SEQN_FILE"
    else
        current=$(cat "$SEQN_FILE")
        echo $((current + 1)) > "$SEQN_FILE"
    fi
    cat "$SEQN_FILE"
}


#==============================================================================
#                       llm
#==============================================================================

# Use the tool llm to run qwen3 8b and pipe to glow for nicer markdown formatting
llmq8g() {
    tmpfile=$(mktemp)

    llm -m q8 \
        -o max_tokens 4096 \
        -o temperature 0.2 \
        "$@" | tee "$tmpfile"

    echo
    glow "$tmpfile"

    command rm "$tmpfile"
}

# Use the tool llm to run qwen3 30b and pipe to glow for nicer markdown formatting
llmq30g() {
    tmpfile=$(mktemp)

    llm -m q8 \
        -o max_tokens 12000 \
        -o temperature 0.2 \
        "$@" | tee "$tmpfile"

    echo
    glow "$tmpfile"

    command rm "$tmpfile"
}

e() {
  llm -m qc30 -s "Output ONLY the shell command. No explanation, no markdown, no code fences. Shell: zsh. OS: macOS." "$*"
}
